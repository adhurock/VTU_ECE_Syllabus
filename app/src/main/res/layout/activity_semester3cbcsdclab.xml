<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.vtuecesyllabus.Sem3cbcsdclabActivity"
    android:fillViewport="false">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       Electronics and Communication Eng.:Semester-3"
            android:id="@+id/heading"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#cdb559d1"
            android:textColor="#ffffff" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/heading"
            android:id="@+id/headinglin" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DIGITAL ELECTRONICS LABORATORY "

            android:id="@+id/text1"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_below="@+id/headinglin"
            android:textSize="25dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/text1"
            android:id="@+id/table">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sub Code:15ECL38"
                    android:id="@+id/text2"
                    android:textSize="18dp"
                    android:layout_column="0" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credits : 02"
                    android:textSize="18dp"
                    android:id="@+id/text3"
                    android:layout_column="0" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total No. of Lecture Hours/Week : 01Hr Tutorial(Instructions)+02 Hours Laboratory."
                    android:id="@+id/text5"
                    android:textSize="18dp"
                    android:layout_column="0" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IA Marks : 20"
                    android:id="@+id/text"
                    android:textSize="18dp"
                    android:layout_column="0" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exam Marks: 80"
                    android:id="@+id/text6"
                    android:textSize="18dp"
                    android:layout_column="0" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exam Hours : 03"
                    android:id="@+id/text7"
                    android:textSize="18dp"
                    android:layout_column="0" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    "
                    android:id="@+id/text8"
                    android:layout_column="0" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course Objectives:"
                    android:id="@+id/text9"
                    android:textSize="21dp"
                    android:textStyle="bold"

                    android:layout_column="0" />
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" This laboratory course enables students to get practical experience in design, realisation and verification of\no Demorgan’s Theorem, SOP, POS forms\no Full/Parallel Adders, Subtractors and Magnitude Comparator\no Multiplexer using logic gates\no Demultiplexers and Decoders\no Flip-Flops, Shift registers and Counters "
            android:layout_below="@+id/table"
            android:textSize="15dp"
            android:id="@+id/text10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laboratory Experiments:"
            android:textAlignment="center"
            android:layout_marginTop="3dp"
            android:textSize="21dp"
            android:textStyle="bold"
            android:layout_below="@+id/text10"

            android:id="@+id/text11" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOTE:"
            android:layout_marginTop="2dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_below="@+id/text11"

            android:id="@+id/text12" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Use discrete components to test and verify the logic gates. The IC numbers given are suggestive; any equivalent ICs can be used.\n\n1. Verify\n   (a) Demorgan’s Theorem for 2 variables.\n   (b) The sum-of product and product-of-sum expressions using universal gates.\nRBT LEVEL : L1, L2, L3\n2. Design and implement (a) Full Adder using basic logic gates. (b) Full subtractor using basic logic gates.\nRBT LEVEL : L3, L4\n3. Design and implement 4-bit Parallel Adder/ subtractor using IC 7483.\nRBT LEVEL : L3, L4, L5\n4.  Design and Implementation of 4-bit Magnitude Comparator using IC 7485.\nRBT LEVEL : L3, L4, L5\n5. Realize (a) 4:1 Multiplexer using gates. (b) 3-variable function using IC 74151(8:1MUX).\nRBT LEVEL : L2, L3, L4\n6. Realize 1:8 Demux and 3:8 Decoder using IC74138. L2, L3, L4\n7. Realize the following flip-flops using NAND Gates. (a) Clocked SR Flip-Flop (b) JK Flip-Flop.\nRBT LEVEL : L2, L3\n8. Realize the following shift registers using IC7474 (a) SISO (b) SIPO (c) PISO (d)PIPO.\nRBT LEVEL : L2, L3\n9. Realize the Ring Counter and Johnson Counter using IC7476.\nRBT LEVEL : L2, L3\n10. Realize the Mod-N Counter using IC7490.\nRBT LEVEL : L2, L3\n11. Simulate Full- Adder using simulation tool.\nRBT LEVEL : L2, L3, L4\n12. Simulate Mod-8 Synchronous UP/DOWN Counter using simulation tool.\nRBT LEVEL : L2, L3, L4  "
            android:layout_marginTop="2dp"
            android:textSize="14dp"
            android:layout_below="@+id/text12"
            android:id="@+id/text13" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Outcomes :"
            android:layout_marginTop="11dp"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_below="@+id/text13"
            android:id="@+id/text14" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  On the completion of this laboratory course, the students will be able to:\n• Demonstrate the truth table of various expressions and combinational circuits using logic gates.\n• Design, test and evaluate various combinational circuits such as adders, subtractors, comparators, multiplexers and demultiplexers.\n• Construct flips-flops, counters and shift registers.\n• Simulate full adder and up/down counters.  "
            android:layout_marginTop="2dp"
            android:textSize="15dp"
            android:layout_below="@+id/text14"
            android:id="@+id/text15" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conduct of Practical Examination:"
            android:layout_marginTop="11dp"
            android:textSize="19dp"
            android:textStyle="bold"
            android:layout_below="@+id/text15"
            android:id="@+id/text16" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• All laboratory experiments are to be included for practical   examination.\n• Students are allowed to pick one experiment from the lot.\n• Strictly follow the instructions as printed on the cover page of answer script for breakup of marks.\n• Change of experiment is allowed only once and 15% Marks allotted to the procedure part to be made zero.\n
                                           "
            android:layout_marginTop="2dp"
            android:textSize="15dp"
            android:layout_below="@+id/text16"

            android:id="@+id/text17" />









    </RelativeLayout>
</ScrollView>
