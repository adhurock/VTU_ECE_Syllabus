<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.vtuecesyllabus.Main4Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="                 1st and 2nd Semester-All Branches            "
            android:id="@+id/heading"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#cdb559d1"
            android:textColor="#ffffff" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/heading"
            android:id="@+id/headinglin" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Engineering Mathematics-I                                 "
            android:id="@+id/mathcbcs1"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/headinglin"
            android:background="#ffffff"
            android:textAllCaps="false"
            android:textSize="16dp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/mathcbcs1"
            android:id="@+id/lin1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Engineering Physics                                             "
            android:id="@+id/phycbcs"
            android:background="#ffffff"
            android:textSize="16dp"
            android:layout_below="@+id/lin1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/phycbcs"
            android:id="@+id/lin2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Engineering chemistry                                         "
            android:id="@+id/checbcs"
            android:background="#ffffff"
            android:textSize="16dp"
            android:layout_below="@+id/lin2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/checbcs"
            android:id="@+id/lin3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Elements of Civil Engineering and Mechanics "
            android:id="@+id/civilcbcs"
            android:background="#ffffff"
            android:textSize="16dp"
            android:layout_below="@+id/lin3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/civilcbcs"
            android:id="@+id/lin4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Principles of Communication Systems"
            android:id="@+id/semester7"
            android:background="#ffffff"
            android:textSize="16dp"
            android:layout_below="@+id/lin4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/semester7"
            android:id="@+id/lin5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Linear Integrated Circuits                      "
            android:id="@+id/semester8"
            android:background="#ffffff"
            android:textSize="16dp"
            android:layout_below="@+id/lin5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/semester8"
            android:id="@+id/lin6" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Microprocessor Lab        "
            android:id="@+id/aeclab"
            android:background="#ffffff"
            android:textSize="16dp"
            android:layout_below="@+id/lin6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/aeclab"
            android:id="@+id/lin7" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Digital Electronics Lab                            "
            android:id="@+id/declab"
            android:background="#ffffff"
            android:textSize="16dp"
            android:layout_below="@+id/lin6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/declab"
            android:id="@+id/lin8" />

    </RelativeLayout>
</ScrollView>
