<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.vtuecesyllabus.Semester4oldActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="       Electronics and Communication Eng.:Semester-4"
            android:id="@+id/heading"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#cdb559d1"
            android:textColor="#ffffff" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/heading"
            android:id="@+id/headinglin" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Engineering Mathematics-IV          "
            android:id="@+id/math4old"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/headinglin"
            android:background="#ffffff"
            android:textAllCaps="false"
            android:textSize="20dp" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/math4old"
            android:id="@+id/lin1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Microcontroller                                 "
            android:id="@+id/mcold"
            android:background="#ffffff"
            android:textSize="20dp"
            android:layout_below="@+id/lin1"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/mcold"
            android:id="@+id/lin2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Control Systems                               "
            android:id="@+id/csold"
            android:background="#ffffff"
            android:textSize="20dp"
            android:layout_below="@+id/lin2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/csold"
            android:id="@+id/lin3" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Signals and Systems                        "
            android:id="@+id/ssold"
            android:background="#ffffff"
            android:textSize="20dp"
            android:layout_below="@+id/lin3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/ssold"
            android:id="@+id/lin4" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Fundamentals of HDL                      "
            android:id="@+id/hdlold"
            android:background="#ffffff"
            android:textSize="20dp"
            android:layout_below="@+id/lin4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/hdlold"
            android:id="@+id/lin5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Linear IC's and Applications           "
            android:id="@+id/licold"
            android:background="#ffffff"
            android:textSize="20dp"
            android:layout_below="@+id/lin5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/licold"
            android:id="@+id/lin6" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="Microcontrollers Lab                        "
            android:id="@+id/mcoldlab"
            android:background="#ffffff"
            android:textSize="20dp"
            android:layout_below="@+id/lin6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/mcoldlab"
            android:id="@+id/lin7" />



        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="HDL Lab                                              "
            android:id="@+id/hdloldlab"
            android:background="#ffffff"
            android:textSize="20dp"
            android:layout_below="@+id/lin7"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:layout_alignParentStart="true" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#0d0c0c"
            android:layout_below="@+id/hdloldlab"
            android:id="@+id/lin8" />

    </RelativeLayout>
</ScrollView>
